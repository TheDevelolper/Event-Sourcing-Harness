{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ui-models": [
        "./libs/ui-models/src/"
      ],
      "@micro-frontends": [
        "./libs/micro-frontends/src/"
      ],
      "@ui-components": [
        "./libs/ui-components/src/"
      ]
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "apps/**/*.ts",
    "libs/**/*.ts",
    "apps/web/src/auth/authentication-service.ts",
    "apps/web/src/auth/keycloak-provider.tsx"
  ]
}